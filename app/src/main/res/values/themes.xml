<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.myLight" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- 定义底部导航栏的选中状态颜色 -->
        <item name="colorPrimary">#11d6bb</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#11d6bb</item>
        <item name="ColorNavigationBackground">@color/white</item>
        <item name="ColorActionBar">#11d6bb</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="ColorSpinnerBack">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="ColorBtnEdge">#00BCD4</item>

    </style>
    <style name="Theme.myDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">#2c2c2c</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <item name="ColorNavigationBackground">#000000</item>
        <item name="ColorActionBar">#000000</item>

        <!--    主题界面背景色    -->
        <item name="android:windowBackground">#0f0f0f</item>
        <item name="ColorSpinnerBack">#0f0f0f</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="ColorBtnEdge">#B8A600</item>
    </style>
</resources>